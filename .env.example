# Private key for deployment (without 0x prefix)
# Get this from your MetaMask wallet: Account Details > Export Private Key
PRIVATE_KEY=your_private_key_here

# Polygonscan API key for contract verification
# Get from: https://polygonscan.com/apis
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here

# Optional: Custom RPC URLs (defaults provided in hardhat.config.js)
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com
AMOY_RPC_URL=https://rpc-amoy.polygon.technology
POLYGON_RPC_URL=https://polygon-rpc.com

# Optional: Gas reporting and optimization
REPORT_GAS=false
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_for_gas_reporting

# Development settings
NODE_ENV=development

# RPC URLs (optional - defaults provided in hardhat.config.js)
AMOY_RPC_URL=https://rpc-amoy.polygon.technology
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com